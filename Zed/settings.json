// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (double shift)

{
    //----------------------------//
    //          Vim mode          //
    //----------------------------//

    "show_edit_predictions": false,
    "features": {
        "edit_prediction_provider": "zed"
    },
    "vim_mode": false,

    //----------------------------//
    //            Font            //
    //----------------------------//

    "buffer_font_size": 18,
    "buffer_font_family": "3270 Nerd Font Mono",
    "buffer_font_fallbacks": ["Hack Nerd Font Mono", "Zed Plex Mono"],

    "ui_font_size": 18,
    "ui_font_family": "3270 Nerd Font Mono",
    "ui_font_fallbacks": ["Hack Nerd Font Mono", "Zed Plex Sans"],

    //----------------------------//
    //           Editor           //
    //----------------------------//

    "buffer_line_height": "standard",
    "cursor_shape": "bar",
    "scrollbar": {
        "show": "system",
        "diagnostics": "error"
    },
    "autosave": {
        "after_delay": {
            "milliseconds": 1000
        }
    },
    "indent_guides": {
        "enabled": true,
        "coloring": "fixed",
        "line_width": 1,
        "active_line_width": 2,
        "background_coloring": "disabled"
    },
    "tab_bar": {
        "show_nav_history_buttons": false
    },
    "tabs": {
        "file_icons": true,
        "git_status": true,
        "activate_on_close": "left_neighbour"
    },
    "auto_indent_on_paste": true,
    "toolbar": {
        "breadcrumbs": false,
        "quick_actions": false
    },
    "diagnostics": {
        "include_warnings": false,
        "inline": {
            "enabled": true,
            "update_debounce_ms": 150,
            "padding": 4,
            "min_column": 0,
            "max_severity": null
        }
    },
    "soft_wrap": "none",
    "show_wrap_guides": false,
    "tab_size": 4,
    "format_on_save": "off",

    //----------------------------//
    //         Workspace          //
    //----------------------------//

    "journal": {
        "path": "~",
        "hour_format": "hour24"
    },
    "use_smartcase_search": true,
    "restore_on_startup": "last_session",
    "autoscroll_on_clicks": true,
    "base_keymap": "JetBrains",

    "notification_panel": {
        "dock": "right"
    },
    "collaboration_panel": {
        "button": false
    },
    "outline_panel": {
        "dock": "right"
    },
    "project_panel": {
        "auto_fold_dirs": false,
        "dock": "left"
    },
    "icon_theme": "Colored Zed Icons Theme Dark",
    "telemetry": {
        "metrics": false,
        "diagnostics": false
    },
    "theme": {
        "mode": "system",
        "light": "One Light",
        "dark": "Catppuccin Espresso (Blur)"
    },
    "show_call_status_icon": true,

    //----------------------------//
    //          Terminal          //
    //----------------------------//

    "terminal": {
        "shell": {
            "with_arguments": {
                "program": "C:\\Users\\pbuerdel\\AppData\\Local\\Microsoft\\WindowsApps\\Microsoft.PowerShell_8wekyb3d8bbwe\\pwsh.exe",
                "args": ["--nologo"]
            }
        },
        "toolbar": {
            "breadcrumbs": false
        }
    }
}
